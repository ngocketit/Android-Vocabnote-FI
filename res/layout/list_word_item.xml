<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	
	<TextView android:id="@id/list_item_txt_date"
		android:layout_width="match_parent"
		android:layout_height="@dimen/list_title_height"
		android:gravity="center_vertical|left"
		android:paddingLeft="5dp"
		android:clickable="false"
		android:background="#ff524E50"
		android:textColor="#ffffffff"
        	android:textSize="14sp"
		android:textStyle="bold"/>

	<RelativeLayout android:layout_height="@dimen/list_item_height"
		android:background="@drawable/list_item_background"
	    	android:layout_width="match_parent">
    	
	    <TextView android:id="@id/list_item_txt_word" 
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
	        	android:gravity="center_vertical|left"
        		android:textSize="@dimen/word_item_text_size"
        		android:paddingLeft="5dp"
			android:textColor="#ff000000"
        		android:layout_centerVertical="true"/>
    
	    <ImageView android:id="@+id/noteMark"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
	        	android:scaleType="fitXY"
        		android:visibility="gone"
        		android:layout_alignParentRight="true"
	        	android:layout_marginRight="5dp"
        		android:paddingRight="5dp"
        		android:layout_centerVertical="true"/>
	</RelativeLayout>
</LinearLayout>
